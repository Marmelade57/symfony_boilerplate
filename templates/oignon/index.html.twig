{% extends 'base.html.twig' %}

{% block title %}Liste des Burgers - {% endblock %}
{% block content %}

<h2>Liste des oignons : </h2>

{% if oignons is defined %}
    {% if oignons is empty %}
        <p class="error">Aucun oignon n'a été trouvé</p>
    {% else %}
        <ul>
            {% for oignon in oignons %}
                <li class="card-title">{{ oignon.name }}</li>
            {% endfor %}
        </ul>
    {% endif %}
{% endif %}

{% endblock %}